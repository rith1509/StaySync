<% layout("/layouts/boilerplate") %>

<div class="filter-bar">
    <div class="filter-options">
        <a href="/listings/category/fire" class="filter-option">
            <i class="fa-solid fa-fire"></i><p>Trending</p>
        </a>
        <a href="/listings/category/bed" class="filter-option">
            <i class="fa-solid fa-bed"></i><p>Rooms</p>
        </a>
        <a href="/listings/category/city" class="filter-option">
            <i class="fa-solid fa-city"></i><p>Iconic Cities</p>
        </a>
        <a href="/listings/category/mountain" class="filter-option">
            <i class="fa-solid fa-mountain"></i><p>Mountains</p>
        </a>
        <a href="/listings/category/awesome" class="filter-option">
            <i class="fa-brands fa-fort-awesome"></i><p>Castles</p>
        </a>
        <a href="/listings/category/swimming" class="filter-option">
            <i class="fa-solid fa-person-swimming"></i><p>Amazing Pools</p>
        </a>
        <a href="/listings/category/campground" class="filter-option">
            <i class="fa-solid fa-campground"></i><p>Camping</p>
        </a>
        <a href="/listings/category/tractor" class="filter-option">
            <i class="fa-solid fa-tractor"></i><p>Farms</p>
        </a>
        <a href="/listings/category/snowflake" class="filter-option">
            <i class="fa-regular fa-snowflake"></i><p>Arctic</p>
        </a>
    </div>

    <div class="form-check form-switch tax-toggle">
        <input class="form-check-input" type="checkbox" role="switch" id="taxSwitch">
        <label class="form-check-label" for="taxSwitch">Display total after taxes</label>
    </div>
</div>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
  <% for(let listing of allListings) { %>
  <a href="/listings/<%= listing._id %>" class="listing-link">
    <div class="card col listing-card">
      <img
        src="<%= listing.image.url %>"
        class="card-img-top"
        alt="listing_image"
        style="height: 20rem"
      />
      <div class="card-img-overlay"></div>
      <div class="card-body">
        <p class="card-text">
          <b><%= listing.title %></b> <br />
          <span class="listing-price" data-original-price="<%= listing.price %>">
            &#8377; <%= listing.price.toLocaleString("en-IN") %> / night
          </span>
        </p>
      </div>
    </div>
  </a>
  <% } %>
</div>